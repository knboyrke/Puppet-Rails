<%= form_with(model: memo) do |f| %>
  <% if memo.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% memo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>